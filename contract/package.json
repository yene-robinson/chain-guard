{
  "name": "chain-guard-contracts",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "hardhat test --reporter hardhat-gas-reporter",
    "test:forge": "forge test",
    "test:forge:verbose": "forge test -vvv",
    "test:forge:coverage": "forge coverage",
    "test:forge:gas": "forge test --gas-report",
    "test:comprehensive": "bash run-tests.sh",
    "manage:rewards": "hardhat run scripts/manage-rewards.ts --network liskSepolia",
    "deploy:dynamic": "hardhat ignition deploy ignition/modules/SmetRewardDynamic.ts --network liskSepolia",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "verify:sepolia": "hardhat verify --network sepolia",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "ipfs:validate": "node scripts/ipfs/validate-metadata.js",
    "ipfs:upload": "node scripts/ipfs/upload-metadata.js",
    "ipfs:update-uris": "node scripts/ipfs/update-contract-uris.js",
    "ipfs:deploy": "node scripts/ipfs/deploy-nft-metadata.js"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.0",
    "@types/node": "^22.17.1",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.0",
    "typescript": "~5.8.0",
    "viem": "^2.33.3"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.4.0",
    "@openzeppelin/contracts": "^5.4.0",
    "pinata-web3": "^0.4.0",
    "dotenv": "^16.4.5"
  }
}
